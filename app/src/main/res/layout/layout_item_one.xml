<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EFEEEE">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_iv_one"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/gray_line"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/item_tv_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="测试标题"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/item_iv_one" />

            <TextView
                android:id="@+id/item_tv_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="测试文本"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/item_tv_one" />

            <TextView
                android:id="@+id/item_tv_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:text="X元起"
                android:textColor="@color/red"
                app:layout_constraintTop_toBottomOf="@id/item_tv_two" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/cv_item_one"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>